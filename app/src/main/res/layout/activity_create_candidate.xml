<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ui.activities.createCandidate.tabs.FragmentProfileDetails">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sp"
            >

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_arrow_back_24"
                android:id="@+id/btn_jump_back"
                android:layout_margin="@dimen/_16sdp"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/tv_join_meeting"
                            style="@style/textview.Style.TvStyleWhiteRounded_30"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:text="@string/txt_createProfile" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/_10sp"
                            >


                            <EditText
                                android:id="@+id/et_firstname"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:hint="@string/txt_firstName"
                                android:imeOptions="actionNext"
                                android:textSize="@dimen/_18sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sp"
                                style="@style/editext.style.base"
                                />



                            <!--                            <com.google.android.material.textfield.TextInputLayout-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:hint="Middle Name"-->
<!--                                android:minWidth="32dp"-->
<!--                                android:minHeight="48dp"-->
<!--                                >-->
<!--                                <com.google.android.material.textfield.TextInputEditText-->
<!--                                    android:layout_width="match_parent"-->
<!--                                    android:layout_height="@dimen/_45sdp"-->
<!--                                    android:id="@+id/et_middlename"-->
<!--                                    android:singleLine="true"-->
<!--                                    android:maxLength="30"-->
<!--                                    />-->
<!--                            </com.google.android.material.textfield.TextInputLayout>-->

                            <EditText
                                android:id="@+id/et_Lastname"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:hint="@string/txt_lastName"
                                android:imeOptions="actionNext"
                                android:layout_marginVertical="@dimen/_10sp"
                                android:textSize="@dimen/_18sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sp"
                                style="@style/editext.style.base"
                                />
                            <EditText
                                android:id="@+id/et_email"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:hint="@string/txt_email"
                                android:imeOptions="actionNext"
                                android:textSize="@dimen/_18sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sp"
                                style="@style/editext.style.base"
                                />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginVertical="@dimen/_10sp"
                                >

                                <Spinner
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/spinnerCountryCode"
                                    />

                                <EditText
                                    android:id="@+id/et_phoneno"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:maxLength="10"
                                    android:inputType="phone"
                                    android:hint="@string/txt_phoneNo"
                                    android:imeOptions="actionDone"
                                    android:digits="0123456789"
                                    android:textSize="@dimen/_18sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sp"
                                    style="@style/editext.style.base"
                                    />



                            </androidx.appcompat.widget.LinearLayoutCompat>

<!--                            <com.google.android.material.textfield.TextInputLayout-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:hint="@string/txt_four_digit_ssn"-->
<!--                                android:minWidth="32dp"-->
<!--                                android:minHeight="48dp"-->
<!--                                android:layout_marginVertical="@dimen/_10sp"-->
