<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ui.activities.createCandidate.tabs.FragmentProfileDetails">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sp"
            >

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_arrow_back_24"
                android:id="@+id/btn_jump_back"
                android:layout_margin="@dimen/_16sdp"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="16sp"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/tv_join_meeting"
                            style="@style/textview.Style.TvStyleWhiteRounded_30"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:text="@string/txt_profile_details" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/_10sp"
                            >

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_firstname"
                                app:hintTextColor="@color/skyblue_light1"
                                android:minWidth="32dp"
                                android:layout_marginVertical="@dimen/_10sp"
                                android:minHeight="48dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_firstname"
                                    android:singleLine="true"
                                    android:maxLength="30"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>



                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/txt_middelName"
                                android:minWidth="32dp"
                                android:minHeight="48dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_middlename"
                                    android:singleLine="true"
                                    android:maxLength="30"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_lastname"
                                android:minWidth="32dp"
                                android:minHeight="48dp"
                                android:layout_marginTop="@dimen/_10sp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_Lastname"
                                    android:singleLine="true"
                                    android:maxLength="30"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_email"
                                android:layout_marginVertical="@dimen/_10sp"
                                android:minWidth="32dp"
                                android:minHeight="48dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_email"
                                    android:singleLine="true"
                                    android:maxLength="100"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:id="@+id/tv_txt_start_meeting"
                                style="@style/textview.Style.WhiteRounded_18_withoutPaddingMargin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_10sp"
                                android:text="@string/txt_primaryNumber" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                               <Spinner
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/_50sdp"
                                   android:layout_weight="0.5"
                                   android:layout_marginRight="@dimen/_10sp"
                                   android:id="@+id/spinnerCountryCode"
                                   />

                                <EditText
                                    android:id="@+id/et_phoneno"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp"
                                    android:hint="@string/txt_phoneNo"
                                    android:layout_weight="0.3"
                                    android:singleLine="true"
                                    android:maxLength="10"
                                    android:inputType="number"
                                    />

                            </androidx.appcompat.widget.LinearLayoutCompat>

<!--                            <com.google.android.material.textfield.TextInputLayout-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:hint="@string/txt_four_digit_ssn"-->
<!--                                android:minWidth="32dp"-->
<!--                                android:minHeight="48dp"-->
<!--                                android:layout_marginVertical="@dimen/_10sp"-->
<!--                                >-->
<!--                                <com.google.android.material.textfield.TextInputEditText-->
<!--                                    android:layout_width="match_parent"-->
<!--                                    android:layout_height="45sp"-->
<!--                                    android:id="@+id/et_ssn"-->
<!--                                    android:maxLength="4"-->
<!--                                    android:singleLine="true"-->
<!--                                    />-->
<!--                            </com.google.android.material.textfield.TextInputLayout>-->

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:id="@+id/spinnerCountry"
                                android:background="@drawable/shape_rectangle_rounded_stroke_grey"
                                />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:id="@+id/spinnerState"
                                android:layout_marginVertical="@dimen/_10sp"
                                android:background="@drawable/shape_rectangle_rounded_stroke_grey"
                                />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:id="@+id/spinnerCity"
                                android:background="@drawable/shape_rectangle_rounded_stroke_grey"
                                />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/txt_street"
                                android:minWidth="32dp"
                                android:minHeight="48dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_marginVertical="@dimen/_10sp"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_street"
                                    android:singleLine="true"
                                    android:maxLength="100"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/txt_zip"
                                android:minWidth="32dp"
                                android:minHeight="48dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_zipCode"
                                    android:singleLine="true"
                                    android:maxLength="10"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:id="@+id/spinnerJobtype"
                                android:background="@drawable/shape_rectangle_rounded_stroke_grey"
                                android:digits="0123456789"
                                android:maxLength="10"
                                android:layout_marginVertical="@dimen/_10sp"
                                />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/txt_experience"
                                android:minWidth="32dp"
                                android:minHeight="48dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_experience"
                                    android:singleLine="true"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/txt_primary_skills"
                                android:minWidth="32dp"
                                android:minHeight="48dp"
                                android:layout_marginTop="@dimen/_10sp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_primarySkills"
                                    android:singleLine="true"
                                    android:maxLength="100"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/txt_secondary_skills"
                                android:minWidth="32dp"
                                android:minHeight="48dp"
                                android:layout_marginVertical="@dimen/_10sp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_secondarySkills"
                                    android:singleLine="true"
                                    android:maxLength="500"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_submit"
                                style="@style/button.Style.Blue.Rounded.WithouPadding"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_marginTop="@dimen/_15sp"
                                android:layout_marginBottom="@dimen/_10sp"
                                android:text="@string/txt_submit"
                                android:foreground="?selectableItemBackground"
                                android:textSize="@dimen/_18sdp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </ScrollView>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </FrameLayout>
</layout>