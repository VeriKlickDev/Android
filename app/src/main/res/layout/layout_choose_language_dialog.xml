<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_rounded_10_white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"
        >

        <ImageView
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_10sp"
            android:id="@+id/btn_cross"
            android:layout_marginRight="@dimen/_5sp"
            android:backgroundTint="@color/grey"
            android:background="@drawable/ic_cross"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="350sp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_16sdp"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/spinner_language"

                />


        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_error"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:text="@string/txt_please_select_language"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submitButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            style="@style/button.Style.Blue.Rounded"
            android:layout_marginTop="@dimen/_20sp"
            android:text="@string/txt_send"
            android:textSize="@dimen/_18sdp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>