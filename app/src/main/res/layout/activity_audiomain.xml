<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".AudioMainActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_jump_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_16sdp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_arrow_back_24"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/tv_set_preference"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_10sp"
                android:src="@drawable/ic_change_langauge"
                android:fontFamily="@font/sarabun_semibold"
                android:gravity="right"
                android:textColor="@color/skyblue_light1"
                android:textSize="@dimen/_15sp"
                />


        </androidx.appcompat.widget.LinearLayoutCompat>



        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sp"
            android:orientation="vertical"
            android:layout_marginLeft="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_introduce_yourself"
                android:textColor="@color/black"
                android:layout_margin="0dp"
                style="@style/textview.Style.TvStyleWhiteRounded_30.withoutMargin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_record_your_voice"
                android:textColor="@color/grey"
                android:textSize="15sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.imn.iivisu.RecorderVisualizer
            android:id="@+id/visualizer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            app:approximateBarDuration="75"
            app:backgroundBarPrimeColor="@color/gray"
            app:barWidth="3dp"
            android:layout_gravity="center_horizontal"
            app:loadedBarPrimeColor="@color/skyblue_light1"
            app:maxAmp="100"
            app:spaceBetweenBar="2dp" />

        <TextView
            android:id="@+id/timeline_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_time"
            android:textColor="@color/skyblue_light1"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="64sp"
            android:layout_height="64sp"
           android:layout_gravity="center_horizontal"
            >

            <ProgressBar
                android:id="@+id/audioProgressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/_10sp"
                android:progressTint="@color/white"
                android:indeterminateTint="@color/white"
                android:padding="@dimen/_2sp"
                android:indeterminate="false"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/circular_progress_bar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/record_button"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:background="@color/skyblue_light1"
                android:gravity="center"
                android:src="@drawable/ic_baseline_mic_24_blue"
                app:contentPadding="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/audioProgressBar"
                app:layout_constraintEnd_toEndOf="@+id/audioProgressBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedCorner50" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_play"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginTop="@dimen/_16sdp"
            android:visibility="gone"
            android:background="@color/skyblue_light1"
            android:gravity="center"
            android:src="@drawable/ic_play_arrow_24"
            app:contentPadding="@dimen/_12sp"
            android:layout_gravity="center_horizontal"
            app:shapeAppearanceOverlay="@style/roundedCorner50" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            >

<!--            <androidx.appcompat.widget.AppCompatButton-->
<!--                android:id="@+id/btn_skip"-->
<!--                style="@style/button.Style.lightBlue.Rounded.elevation.stroke"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/_55sdp"-->
<!--                android:layout_marginTop="@dimen/_15sp"-->
<!--                android:text="@string/txt_skip"-->
<!--                android:textSize="@dimen/_18sdp" />-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_skip"
                style="@style/button.Style.Blue.Rounded.Enable.Disable.Stroke"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:text="@string/txt_next"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_uploadData" />


        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>