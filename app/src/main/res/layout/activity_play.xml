<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.ui.activities.upcomingMeeting.audioRecord.PlayActivity">

        <ImageView
            android:id="@+id/btn_jump_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_16sdp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_arrow_back_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_jump_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_record_your_voice"
                android:textColor="@color/black"
                android:layout_margin="0dp"
                style="@style/textview.Style.TvStyleWhiteRounded_30"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_record_your_voice"
                android:textColor="@color/grey"
                android:textSize="15sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.imn.iivisu.PlayerVisualizer
            android:id="@+id/visualizer"
            android:layout_width="0dp"
            android:layout_height="@dimen/_300sdp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            app:approximateBarDuration="75"
            app:backgroundBarPrimeColor="@color/gray"
            app:barWidth="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2"
            app:loadedBarPrimeColor="@color/skyblue_light1"
            app:maxAmp="100"
            app:spaceBetweenBar="2dp" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visualizer"
            app:layout_constraintVertical_bias="0.07999998">

            <ImageView
                android:id="@+id/seek_backward_button"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_margin="@dimen/_32sdp"
                android:background="@drawable/ic_baseline_delete_24"
                app:shapeAppearanceOverlay="@style/roundedCorner50" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/timeline_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sp"
                    android:text="@string/zero_time"
                    android:textColor="@color/skyblue_light1"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/play_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/play_button"
                    style="@style/Veriklick.IconButtonBlue"
                    android:layout_margin="@dimen/_32sdp"
                    android:background="@color/skyblue_light1"

                    app:contentPadding="@dimen/_10sp"
                    app:icon="@drawable/ic_play_arrow_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/roundedCorner50" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--            <com.google.android.material.imageview.ShapeableImageView-->
            <!--                android:layout_height="35sp"-->
            <!--                android:layout_width="35sp"-->
            <!--                android:id="@+id/seek_forward_button"-->
            <!--                style="@style/Veriklick.IconButtonGrey"-->
            <!--                android:layout_margin="@dimen/_32sdp"-->
            <!--                android:background="@color/lightGreen"-->
            <!--                android:src="@drawable/ic_baseline_check_24"-->
            <!--                app:contentPadding="@dimen/_4sdp"-->
            <!--                app:shapeAppearanceOverlay="@style/roundedCorner50" />-->


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat"
            app:layout_constraintVertical_bias="0.831">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_uploadData"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginHorizontal="@dimen/_10sp"
                android:layout_marginTop="92dp"
                android:background="@drawable/shape_roundedcorner_blue_10"
                android:text="@string/txt_upload"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_skip"
                style="@style/button.Style.Blue.Rounded.Enable.Disable.Stroke"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginBottom="24dp"
                android:text="@string/txt_next"
                android:textSize="@dimen/_18sdp"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>