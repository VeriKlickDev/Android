<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_rounded_10_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_16sdp">

        <!--        <androidx.appcompat.widget.AppCompatImageButton-->
        <!--            android:layout_width="@dimen/_30sdp"-->
        <!--            android:layout_height="@dimen/_3sdp"-->
        <!--            android:background="@drawable/shape_rectangle_rounded_stroke_grey"-->
        <!--            android:backgroundTint="@color/light_grey"-->
        <!--            android:layout_gravity="center_horizontal"-->
        <!--            android:layout_marginTop="@dimen/_10sp"-->
        <!--            />-->

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Space
                    android:layout_width="16sp"
                    android:layout_height="wrap_content"
                     />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_call"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@drawable/shape_rectangle_rounded_stroke_grey"
                    android:src="@drawable/ic_img_call_blue"
                    app:contentPadding="@dimen/_20sp" />

                <Space
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="wrap_content"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_custom_message"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@drawable/shape_rectangle_rounded_stroke_grey"
                    android:src="@drawable/ic_img_message_blue"
                    app:contentPadding="@dimen/_20sp" />

                <Space
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="wrap_content"
                    />


            </androidx.appcompat.widget.LinearLayoutCompat>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_16sdp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Space
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="wrap_content"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_questionnaire"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@drawable/shape_rectangle_rounded_stroke_grey"
                    android:src="@drawable/ic_questionnaire"
                    android:tint="@color/skyblue_light1"
                    app:contentPadding="@dimen/_20sp" />

                <Space
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="wrap_content"
                     />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_smsHistory"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@drawable/shape_rectangle_rounded_stroke_grey"
                    android:src="@drawable/ic_send_messages"
                    android:tint="@color/skyblue_light1"
                    app:contentPadding="@dimen/_20sp" />

                <Space
                    android:layout_width="16sp"
                    android:layout_height="wrap_content"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>