<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_grey_background"
        tools:context="com.ui.activities.upcomingMeeting.UpcomingMeetingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sp"
                android:layout_gravity="center_vertical"
                >


                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/btn_logout"
                    android:layout_marginLeft="10sp"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_img_left_meeting_black"
                    />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_Upcoming_Meetings"
            android:gravity="center"
            android:id="@+id/tv_header"
            android:fontFamily="@font/sarabun_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            android:visibility="visible"
            android:layout_margin="@dimen/_10sp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_10sp"
            />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_rectangle_rounded_10_grey"
                    android:gravity="center"
                    android:id="@+id/layout_search"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:paddingHorizontal="@dimen/_10sp"
                    >
                <EditText
                    android:id="@+id/et_search"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sp"
                    android:visibility="visible"
                    android:textSize="@dimen/_15sp"
                    android:hint="@string/txt_search"
                    android:layout_weight="0.2"
                    />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_search"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:text="Search"
                        android:textSize="@dimen/_10sp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        style="@style/button.Style.Blue.Rounded.WithouPadding"
                        />


                </androidx.appcompat.widget.LinearLayoutCompat>



                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/btn_search_show"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:layout_weight="4.8"
                    android:layout_marginRight="@dimen/_10sp"
                    android:visibility="visible"
                    android:src="@drawable/ic_search_black"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_cross"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:layout_marginLeft="-40sp"
                    android:visibility="gone"
                    android:padding="@dimen/_2sp"
                    android:src="@drawable/ic_close_cross_square"
                    />





            </androidx.appcompat.widget.LinearLayoutCompat>


<!--            rest layout-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rect_rounded_top_20"
                >


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sp"
                android:layout_marginTop="@dimen/_10sp"
                >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/shape_stroke_rect_white_10"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/btn_left_previous"
                    android:layout_marginLeft="10sp"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_arrow_left_black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date to from "
                    android:gravity="center"
                    android:id="@+id/tv_fromdate_toDate"
                    android:fontFamily="@font/sarabun_semibold"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="@dimen/_18sdp"
                    android:layout_margin="@dimen/_10sp"
                    android:layout_marginBottom="@dimen/_10sp"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/btn_right_next"
                    android:layout_marginRight="@dimen/_10sp"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_arrow_right_black"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipetorefresh"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_my_music"
                app:layout_constraintVertical_bias="0.254">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_25sdp"
                    android:text="@string/txt_no_meetings"
                    android:fontFamily="@font/sarabun_regular"
                    android:gravity="center"
                    android:id="@+id/tv_no_data"
                    android:visibility="gone"
                    />

            <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_upcomingMeeting"
                android:elevation="@dimen/_10sp"
            />

                <ProgressBar
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/progressBar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-50dp"
                    android:visibility="gone"
                    android:elevation="@dimen/_12sp"
                    />

            </LinearLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>