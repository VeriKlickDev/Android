<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.ui.activities.upcomingMeeting.UpcomingMeetingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_Upcoming_Meetings"
            android:gravity="center"
            android:id="@+id/tv_header"
            android:fontFamily="@font/sarabun_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            android:layout_margin="@dimen/_10sp"
            android:layout_marginBottom="@dimen/_10sp"
            />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:id="@+id/btn_logout"
                android:layout_marginLeft="-50sp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_img_left_meeting_black"
                />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipetorefresh"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_my_music"
                app:layout_constraintVertical_bias="0.254">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_25sdp"
                    android:text="@string/txt_no_meetings"
                    android:fontFamily="@font/sarabun_regular"
                    android:gravity="center"
                    android:id="@+id/tv_no_data"
                    android:visibility="gone"
                    />

            <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_upcomingMeeting"
                android:elevation="@dimen/_10sp"
            />

            </LinearLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>