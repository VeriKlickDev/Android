<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:background="@drawable/shape_rectangle_rounded_10_white"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_20sp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_rect_grey_top"
            android:padding="@dimen/_10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_jobId"
                android:fontFamily="@font/sarabun_regular" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="helokasdjf"
                android:id="@+id/tv_userId"
                android:textSize="@dimen/_14sp"
                android:fontFamily="@font/sarabun_regular"
                android:textColor="@color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_close_cross_square"
                android:id="@+id/btn_cross"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_description"
            android:layout_marginHorizontal="@dimen/_10sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sarabun_regular"
            android:textSize="@dimen/_14sp"
            android:padding="@dimen/_10sp"
            android:layout_marginBottom="@dimen/_10sp" />


    </LinearLayout>
</layout>