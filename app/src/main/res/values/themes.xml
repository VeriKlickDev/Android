<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TwillioProject" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/skyblue_light1</item>
        <item name="colorPrimaryVariant">#00FFFFFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skyblue_light1</item>
        <item name="colorSecondaryVariant">@color/skyblue_light1</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.TwillioProject1" parent="Theme.TwillioProject">
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="Theme.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
<!--        <item name="android:windowTranslucentNavigation">true</item>-->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
    </style>


    <style name="Theme.TwillioProjectNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="bottomsheet_buttons" parent="Theme.Design.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="bottomsheet_buttons_transparent_background" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rect_rounded_top_20</item>
    </style>

    <style name="editext.Style.WhiteRounded" parent="Widget.AppCompat.EditText">
        <!--        <item name="android:background">@drawable/shape_rectangle_rounded_10_white</item>-->
        <!--        <item name="android:elevation">@dimen/_10sp</item>-->
        <!--        <item name="android:layout_margin">@dimen/_10sp</item>-->
        <!--        <item name="android:padding">@dimen/_10sp</item>-->
        <item name="android:fontFamily">@font/sarabun_regular</item>
        <!--        <item name="android:drawablePadding">@dimen/_10sp</item>-->
    </style>


    <style name="editext.style.base" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/_10sp</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/sarabun_regular</item>
        <item name="backgroundTint">@color/light_grey</item>
    </style>



    <style name="editext.style.base.withoutPadding" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/sarabun_regular</item>
        <item name="backgroundTint">@color/light_grey</item>
    </style>


    <style name="editext.style.rounded.toggle" parent="editext.Style.WhiteRounded">
        <item name="android:background">@drawable/shape_rectangle_rounded_10_white</item>
        <item name="android:elevation">@dimen/_10sp</item>
        <item name="android:fontFamily">@font/sarabun_regular</item>

    </style>


    <style name="button.Style.Blue.Rounded" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_rectangle_rounded_10_skyblue</item>
        <item name="android:fontFamily">@font/sarabun_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sp</item>
        <item name="android:textColor">@color/white</item>

    </style>



    <style name="button.Style.Blue.Rounded.WithouPadding" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_rectangle_rounded_10_skyblue</item>
        <item name="android:fontFamily">@font/sarabun_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.Style.Grey.Rounded.WithouPadding" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_rectangle_rounded_10_greydark</item>
        <item name="android:fontFamily">@font/sarabun_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>




    <style name="button.Style.Blue.Rounded.elevation" parent="button.Style.Blue.Rounded">
        <item name="android:elevation">@dimen/_10sp</item>
        <item name="android:fontFamily">@font/sarabun_regular</item>
    </style>

    <style name="button.Style.lightBlue.Rounded.elevation" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_rectangle_rounded_stroke_blue</item>
        <item name="android:textColor">@color/skyblue_light1</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sp</item>
        <item name="android:layout_marginTop">@dimen/_10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">@dimen/_10sp</item>
        <item name="android:fontFamily">@font/sarabun_regular</item>
        <item name="android:elevation">@dimen/_10sp</item>
    </style>


    <style name="button.Style.White.Rounded.elevation" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_rectangle_rounded_stroke_blue</item>
        <item name="android:elevation">@dimen/_10sp</item>
        <item name="marginHorizontal">@dimen/_10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sarabun_regular</item>
        <item name="android:textColor">@color/skyblue_light1</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sp</item>
    </style>


    <style name="textview.Style.WhiteRounded_18" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/sarabun_regular</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sp</item>
    </style>

    <style name="textview.Style.TvStyleWhiteRounded_30" parent="textview.Style.WhiteRounded_18">
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sp</item>
        <item name="android:textColor">#191E23</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
        <item name="colorControlNormal">@color/white</item>
    </style>


</resources>